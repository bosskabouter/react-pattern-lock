{
    "compilerOptions": {
        "outDir"           : "./lib",
        "sourceMap"        : true,
        "strict"           : true,
        "noImplicitAny"    : true,
        "strictNullChecks" : true,
        "removeComments"   : true,
        "declaration"      : true,
        "module"           : "commonjs",
        "moduleResolution" : "node",
        "target"           : "es5",
        "jsx"              : "react",
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude" : [
        "node_modules"
    ]
}